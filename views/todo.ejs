<!DOCTYPE html>

<html>

    <head>
        <title>Login form</title>
        <style>
            a {
                text-decoration: none;
                color: black;
            }

        </style>
    </head>

    <body>
        <h1>Login Form</h1>
        <ul>
            <% todolist.forEach(function(todo, index) { %>
            <li>
                <a href="/todo/delete/<%= index %>">✘</a>
                <a href="/todo/<%= index %>">✎</a>
                <%- todo %>
            </li>
            <% }); %>
        </ul>

        <form action="/todo/add/" method="post">
            <p>
                <label for="username">UserName</label>
                <input type="text" name="newtodo" id="username" autofocus />
                <label for="password">Password</label>
                <input type="password" name="newtodo" id="password" autofocus />
                <label for="emailid">Email</label>
                <input type="text" name="newtodo" id="emailid" autofocus />
                <input type="submit" value="Add" />
            </p>
        </form>
    </body>

</html>
